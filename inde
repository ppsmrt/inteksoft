<script>
const overlay = document.getElementById('iframeOverlay');
const frame = document.getElementById('fullscreenFrame');
const navButtons = document.querySelectorAll('.nav-btn');

function openFullscreen(url){
  frame.src = url;
  overlay.style.display = 'flex';
  history.pushState({iframeOpen:true}, "Iframe Open");
}

function closeFullscreen(){
  frame.src='';
  overlay.style.display='none';
  if(history.state && history.state.iframeOpen) history.back();
}

// Swipe down to close
let startY=0;
overlay.addEventListener('touchstart', e=>startY=e.touches[0].clientY);
overlay.addEventListener('touchmove', e=>{
  let moveY = e.touches[0].clientY-startY;
  if(moveY>100) closeFullscreen();
});

// Back button handling
window.addEventListener('popstate', ()=>{ if(overlay.style.display==='flex') closeFullscreen(); });

// Set active nav
function setActiveNav(button){
  navButtons.forEach(btn=>btn.classList.remove('active'));
  button.classList.add('active');
}
</script>
